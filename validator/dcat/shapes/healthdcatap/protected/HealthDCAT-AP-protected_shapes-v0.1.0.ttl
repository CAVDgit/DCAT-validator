# HealthDCAT-AP 
# Health Agent Shape (Only for dcat:Dataset publishers)
:HealthAgent_Shape
    a sh:NodeShape ;
    sh:extends :Agent_Shape ;
    rdfs:label "Health Agent"@en ;
    sh:property [
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:IRI ;
        sh:path foaf:homepage ;
        sh:severity sh:Violation
    ], [
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind  sh:IRI;
        sh:path foaf:mbox ;
        sh:severity sh:Violation
    ] . 


:HealthPublisherAgent_Shape
    a sh:NodeShape ;
    sh:extends :HealthAgent_Shape ;
    rdfs:label "Health Publisher Agent"@en ;
    sh:property [
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path healthdcatap:publisherType ;
        sh:severity sh:Violation
    ], [
        sh:minCount 1 ;
        sh:nodeKind sh:Literal ;
        sh:path healthdcatap:publisherNote ;
        sh:severity sh:Violation
    ], [
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:boolean ;
        sh:path healthdcatap:trustedDataHolder ;
        sh:severity sh:Violation
    ] . 

:HealthDataset_Shape
    a sh:NodeShape ;
    rdfs:label "Dataset"@en ;
    sh:extends :Dataset_Shape ;
    sh:property [
        # HealthDCAT-AP
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path dct:accessRights ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path dcat:contactPoint ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:minCount 1 ;
        sh:node :healthDistribution_Shape;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path dcat:distribution ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path dct:spatial ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:minCount 1 ;
        sh:nodeKind sh:Literal ;
        sh:path dct:identifier ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:Literal ;
        sh:path dcat:keyword ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path dct:provenance ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node :HealthPublisherAgent_Shape;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path dct:publisher ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:node :Distribution_Shape;
        sh:path adms:sample ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:minCount 1 ;
        sh:nodeKind sh:IRI ;
        sh:path dcat:theme ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path dct:type ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path dpv:hasPurpose ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node :HealthAgent_Shape;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path healthdcatap:hdab ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:minCount 1 ;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path healthdcatap:healthCategory ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path dqv:hasLegalBasis ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path dpv:hasPersonalData ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path dqv:hasQualityAnnotation ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:node :Distribution_Shape;
        sh:path healthdcatap:analytics ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path healthdcatap:hasCodeValues ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path healthdcatap:hasCodingSystem ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:path healthdcatap:minTypicalAge ;
        sh:datatype xsd:nonNegativeInteger ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:path healthdcatap:maxTypicalAge ;
        sh:datatype xsd:nonNegativeInteger ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:path healthdcatap:numberOfRecords ;
        sh:datatype xsd:nonNegativeInteger ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:path healthdcatap:numberOfUniqueIndividuals ;
        sh:datatype xsd:nonNegativeInteger ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:Literal ;
        sh:path healthdcatap:populationCoverage ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:nodeKind sh:Literal ;
        sh:path dct:alternative ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:node :PeriodOfTime_Shape ;
        sh:path healthdcatap:retentionPeriod ;
        sh:severity sh:Violation
    ] ;
    sh:targetClass dcat:Dataset .

# HealthDCAT-AP
:healthDistribution_Shape
    a sh:NodeShape ;
    rdfs:label "Health Distribution"@en ;
    sh:extends :Distribution_Shape ;
    sh:property [
        # HealthDCAT-AP
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:path dcat:byteSize ;
        sh:datatype xsd:nonNegativeInteger ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path dct:format ;
        sh:severity sh:Violation
    ], [
        # HealthDCAT-AP
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path dct:rights ;
        sh:severity sh:Violation
    ] .
